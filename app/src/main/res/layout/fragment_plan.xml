<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_grey"
    android:orientation="vertical">

    <ListView
        android:id="@+id/id_lv_plan_lists"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_deep_line" />

        <ImageButton
            android:id="@+id/id_img_btn_add_plan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:contentDescription="@string/plan_img_hint"
            android:padding="15dp"
            android:src="@drawable/add_circular" />

        <View
            android:id="@+id/id_view_above_btn"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_deep_line" />

    </LinearLayout>

</LinearLayout>